<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/shopware/platform/trunk/src/Core/System/SystemConfig/Schema/config.xsd">
    <card>
        <title>Tracking</title>

        <input-field type="single-select">
            <name>region</name>
            <label>Select region</label>
            <options>
                <option>
                    <id>1</id>
                    <name>Region 1</name>
                </option>
                <option>
                    <id>2</id>
                    <name>Region 2</name>
                </option>
                <option>
                    <id>3</id>
                    <name>Region 3</name>
                </option>
            </options>
        </input-field>

        <input-field type="text">
            <name>wbtProfileId</name>
            <label>Dotdigital Tag ID</label>
            <helpText><![CDATA[Adding the Dotdigital Tag to your website enables Web behavior tracking and Site tracking. <a href="https://support.dotdigital.com/en/articles/9298184-add-the-dotdigital-tag-to-your-website" target="_blank">Learn more</a>.]]></helpText>
        </input-field>

        <input-field type="checkbox">
            <name>siteRoiTrackingEnabled</name>
            <label>Enable ROI tracking</label>
        </input-field>
    </card>

    <card>
        <title>Abandoned carts (deprecated, see Help Text)</title>

        <input-field type="checkbox">
            <name>acEnabled</name>
            <label>Enable abandoned cart</label>
            <disabled>true</disabled>
            <helpText lang="en-GB">These settings have moved. Abandoned cart program selection, enrolment delay and enabling guest carts, must now be configured in your Dotdigital account. Please visit Connect > Connect website and edit the Abandoned cart settings.</helpText>
        </input-field>

        <input-field type="text">
            <name>acProgramId</name>
            <label>Abandoned cart program ID</label>
            <disabled>true</disabled>
        </input-field>

        <input-field type="int">
            <name>acDelay</name>
            <label>Allow abandoned cart delay (minutes)</label>
            <disabled>true</disabled>
        </input-field>

        <input-field type="checkbox">
            <name>acAllowNonSubscribers</name>
            <label>Allow abandoned cart for non-subscribed contacts</label>
            <disabled>true</disabled>
        </input-field>
    </card>
</config>
